<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="PrimaryText">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="CommonText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="DiaryEntryItemText" parent="CommonText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:drawableLeft">@drawable/ic_diary_entry</item>
        <item name="android:drawablePadding">5sp</item>
    </style>

    <style name="DiaryEntryDateText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AddDiaryEntryDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/expand_from_right_bottom</item>
        <item name="android:windowHideAnimation">@anim/collapse_to_right_bottom</item>
        <item name="android:windowExitAnimation">@anim/collapse_to_right_bottom</item>
    </style>

    <style name="DiaryDraftsDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/expand_from_left_center</item>
        <item name="android:windowHideAnimation">@anim/collapse_to_left_center</item>
        <item name="android:windowExitAnimation">@anim/collapse_to_left_center</item>
        <item name="android:fragmentCloseExitAnimation">@anim/collapse_to_left_center</item>
    </style>

    <style name="AddDiaryEntryItemEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <style name="ExpandableItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="ael_duration">500</item>
        <item name="ael_expanded">false</item>
        <item name="ael_interpolator">fastOutSlowIn</item>
        <item name="ael_orientation">vertical</item>
    </style>

    <style name="FlatButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="FlatImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ErrorTextView">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


</resources>
